{
    "name": "@cartesi/rollups",
    "version": "0.2.0",
    "scripts": {
        "build": "run-s compile",
        "clean:ignored": "rimraf artifacts cache coverage deployments/localhost dist generated-src src/types/*",
        "clean:hardhat": "hardhat clean",
        "clean": "run-s clean:hardhat clean:ignored",
        "copy-dts": "copyfiles -u 1 \"src/**/*.d.ts\" dist/src",
        "compile": "hardhat compile",
        "deploy": "run-s deploy:development",
        "deploy:testnet": "run-s deploy:rinkeby deploy:kovan deploy:goerli deploy:matic_testnet deploy:bsc_testnet",
        "deploy:development": "hardhat deploy --network localhost",
        "deploy:rinkeby": "hardhat deploy --network rinkeby --export export/abi/rinkeby.json",
        "deploy:kovan": "hardhat deploy --network kovan --export export/abi/kovan.json",
        "deploy:goerli": "hardhat deploy --network goerli --export export/abi/goerli.json",
        "deploy:mainnet": "hardhat deploy --network mainnet --export export/abi/mainnet.json",
        "deploy:matic_testnet": "hardhat deploy --network matic_testnet --export export/abi/matic_testnet.json",
        "deploy:bsc_testnet": "hardhat deploy --network bsc_testnet --export export/abi/bsc_testnet.json",
        "info": "npm-scripts-info",
        "prepack": "run-s tsc copy-dts",
        "prepare": "run-s build copy-dts",
        "pretest": "run-s prepare",
        "prettier": "prettier --check .",
        "start": "hardhat node",
        "test": "run-s build test:protoc test:hardhat",
        "test:hardhat": "hardhat test",
        "test:protoc": "mkdirp generated-src/proto && grpc_tools_node_protoc --plugin=protoc-gen-ts=node_modules/.bin/protoc-gen-ts --ts_out=grpc_js:generated-src/proto --js_out=import_style=commonjs,binary:generated-src/proto --grpc_out=grpc_js:generated-src/proto -I ../../grpc-interfaces ../../grpc-interfaces/stateserver.proto",
        "tsc": "tsc"
    },
    "dependencies": {
        "@cartesi/logger": "^0.7.0",
        "@cartesi/util": "^3.1.2",
        "@openzeppelin/contracts": "^4.1.0",
        "graphql-tag": "^2.12.5",
        "solidity-bytes-utils": "^0.8.0"
    },
    "devDependencies": {
        "@grpc/grpc-js": "^1.3.7",
        "@nomiclabs/hardhat-ethers": "^2.0.5",
        "@nomiclabs/hardhat-etherscan": "^3.0.1",
        "@nomiclabs/hardhat-waffle": "^2.0.1",
        "@tenderly/hardhat-tenderly": "^1.0.13",
        "@typechain/ethers-v5": "^9.0.0",
        "@typechain/hardhat": "^4.0.0",
        "@types/chai": "^4.2.14",
        "@types/commander": "^2.12.2",
        "@types/google-protobuf": "^3.15.5",
        "@types/mocha": "^9.1.0",
        "@types/node": "^17.0.18",
        "chai": "^4.2.0",
        "copyfiles": "^2.4.1",
        "ethereum-waffle": "^3.2.1",
        "ethers": "^5.1.4",
        "grpc-tools": "^1.11.2",
        "grpc_tools_node_protoc_ts": "^5.3.2",
        "hardhat": "^2.8.4",
        "hardhat-abi-exporter": "^2.8.0",
        "hardhat-deploy": "^0.10.5",
        "mocha": "^9.2.0",
        "npm-run-all": "^4.1.5",
        "npm-scripts-info": "^0.3.9",
        "prettier": "^2.5.1",
        "prettier-plugin-solidity": "^1.0.0-beta.19",
        "rimraf": "^3.0.2",
        "solhint": "^3.3.4",
        "solhint-plugin-prettier": "^0.0.5",
        "solidity-coverage": "^0.7.13",
        "ts-generator": "^0.1.1",
        "ts-node": "^10.5.0",
        "typechain": "^7.0.0",
        "typescript": "^4.5.5"
    },
    "files": [
        "contracts",
        "deployments/*/*.json",
        "deployments/*/.chainid",
        "dist/src/types",
        "dist/deploy/*.js",
        "export"
    ],
    "main": "./dist/src/types/index.js",
    "types": "./dist/src/types/index.d.ts",
    "license": "Apache-2.0"
}
