{
    "name": "@cartesi/rollups",
    "version": "0.4.0",
    "scripts": {
        "build": "run-s compile export",
        "clean:ignored": "rimraf artifacts cache coverage deployments/localhost dist generated-src src/types/*",
        "clean:hardhat": "hardhat clean",
        "clean": "run-s clean:hardhat clean:ignored",
        "copy-dts": "copyfiles -u 1 \"src/**/*.d.ts\" dist/src",
        "compile": "hardhat compile",
        "deploy": "run-s deploy:development",
        "deploy:testnet": "run-s deploy:goerli deploy:polygon_mumbai",
        "deploy:development": "hardhat deploy --network localhost",
        "deploy:goerli": "hardhat deploy --network goerli --export export/abi/goerli.json",
        "deploy:mainnet": "hardhat deploy --network mainnet --export export/abi/mainnet.json",
        "deploy:polygon_mumbai": "hardhat deploy --network polygon_mumbai --export export/abi/polygon_mumbai.json",
        "export": "hardhat export-artifacts export/artifacts --hide-sources --including-empty-bytecode --including-no-public-functions",
        "info": "npm-scripts-info",
        "prepack": "run-s build tsc:prod copy-dts",
        "prettier": "prettier --check .",
        "start": "hardhat node",
        "test": "run-s build test:protoc test:hardhat",
        "test:hardhat": "hardhat test",
        "test:protoc": "proto-loader-gen-types --grpcLib @grpc/grpc-js --outDir generated-src/proto ../../grpc-interfaces/stateserver.proto",
        "tsc": "tsc",
        "tsc:prod": "tsc -p tsconfig.prod.json"
    },
    "dependencies": {
        "@cartesi/token": "^1.5.1",
        "@cartesi/util": "^4.0.0",
        "@openzeppelin/contracts": "^4.5.0"
    },
    "devDependencies": {
        "@grpc/grpc-js": "^1.6.7",
        "@grpc/proto-loader": "^0.6.12",
        "@nomiclabs/hardhat-ethers": "^2.0.6",
        "@nomiclabs/hardhat-etherscan": "^3.0.3",
        "@nomiclabs/hardhat-waffle": "^2.0.3",
        "@typechain/ethers-v5": "^10.0.0",
        "@typechain/hardhat": "^6.0.0",
        "@types/chai": "^4.3.1",
        "@types/commander": "^2.12.2",
        "@types/google-protobuf": "^3.15.6",
        "@types/mocha": "^9.1.1",
        "@types/node": "^17.0.35",
        "chai": "^4.2.0",
        "copyfiles": "^2.4.1",
        "ethereum-waffle": "^3.4.4",
        "ethers": "5.6.8",
        "hardhat": "^2.9.6",
        "hardhat-abi-exporter": "^2.9.0",
        "hardhat-deploy": "^0.11.10",
        "hardhat-gas-reporter": "^1.0.8",
        "mocha": "^10.0.0",
        "npm-run-all": "^4.1.5",
        "npm-scripts-info": "^0.3.9",
        "prettier": "^2.6.2",
        "prettier-plugin-solidity": "^1.0.0-beta.19",
        "rimraf": "^3.0.2",
        "solhint": "^3.3.4",
        "solhint-plugin-prettier": "^0.0.5",
        "solidity-coverage": "^0.7.21",
        "ts-generator": "^0.1.1",
        "ts-node": "^10.8.0",
        "typechain": "^8.0.0",
        "typescript": "^4.7.2"
    },
    "files": [
        "contracts",
        "deployments/*/*.json",
        "deployments/*/.chainid",
        "dist/src",
        "dist/deploy/*.js",
        "export"
    ],
    "main": "./dist/src/types/index.js",
    "types": "./dist/src/types/index.d.ts",
    "license": "Apache-2.0"
}
